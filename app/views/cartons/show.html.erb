<div class="container">

<!-- Données du Carton : référencement + sensible y/n -->

<h1>Vous êtes dans votre carton</h1><h1 id="referencement"></h1>
<br>
<br>
<% if @carton.sensible == true %>
  <em><%='Attention : ce dossier est marqué comme sensible'%></em>
<% end%>

<!-- Affichage d'éventuels dossiers -->

<br>
<br>
<% if @carton.dossiers.length > 0 %>
<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <th>Nom du dossier</th>
        <th>Client</th>
        <th></th>
        <th></th>
      </thead>
      <% @carton.dossiers.each do |dossier| %>
        <tr>
          <td><%= dossier.name %></td>
          <td><%= dossier.client %></td>
          <td><%= link_to "Mettre à jour", edit_carton_dossier_path(carton_id: @carton.id, id: dossier.id) %></td>
          <td><%= link_to "Supprimer", [@carton, dossier], method: :delete, confirm: "Êtes-vous sûr ?" %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
  <% else %>
    <em><%= "Aucun dossier n'est ajouté pour ce carton." %></em>
  <% end %>


<!-- Boutons ajout/maj/suppression/retour -->

<%= link_to 'Ajouter un dossier', new_carton_dossier_path(@carton) %>
<br><br>
<%= link_to "Mettre à jour le carton", edit_carton_path(@carton) %>
<br>
<%= link_to "Supprimer le carton", @carton, method: :delete, data: { confirm: "Voulez-vous vraiment supprimer ce carton ? NB - tous les dossiers qu'il contient seront supprimés" } %>
<br><br>
<%= link_to "Retour à l'accueil", cartons_path %>
<br>
<br><br><br>


<!-- Javascript pour référencement -->

<script>
var newchronojs =""
  if ("<%= @carton.id %> "< 10) {
  newnew = newchronojs.concat("00", "<%= @carton.id %>") ;

} else if ("<%= @carton.id %>" >= 10  && "<%= @carton.id %>" < 100) {
  newnew = newchronojs.concat("0", "<%= @carton.id %>") ;
} else if ("<%= @carton.id %>" >= 100 ) {
  newnew = newchronojs = "<%= @carton.id %>" ;
}
  var str = "<%= @carton.matiere %>";
  var res = str.charAt(0);
  var strr = "<%= @carton.annee %>";
  var ress = strr.slice(2)
  document.getElementById("referencement").innerHTML = res + ress + newnew;

</script>

</div>
