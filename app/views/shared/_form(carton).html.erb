<br><br>
<div class="container form">

  <%= form_for(@carton) do |f| %>
  <div class="annee">
    <h3 class="coordonnees">Coordonnées de votre carton</h3>
    <br><br>
    <%= f.label :année %><br>
    <%= f.select :annee, (2000)..(Time.zone.now.year - 3), { include_blank: 'Sélectionnez une année' }, {  id: :carton_annee } %>
  </div>
  <div class="matiere">
    <%= f.label :matière %><br>
    <%= f.select :matiere, ['Comptabilité', 'Social', 'Juridique', 'Personnels', 'Administratif'], { include_blank: 'Sélectionnez une matière' }, {  id: :carton_matiere } %>
  </div>
  <div class="localisation">
      <%= f.label :localisation %><br>
      <%= f.select :localisation,['SAINT-TROPEZ - étage', 'SAINT-TROPEZ - cave', 'SAINT-TROPEZ - garage', 'COGOLIN - RDC', 'COGOLIN - garage', 'MARSEILLE ACA - cave grande pièce', 'MARSEILLE ACA - cave pièce entrée', 'MARSEILLE ACA - cave pièce entrée', 'MARSEILLE ACA - cave pièce du fond', 'MARSEILLE ACA - cave passage du fond', 'MARSEILLE ACA - cave pièce chaudière', 'MARSEILLE ACA - petite pièce', 'PARIS - sous-sol', 'MARSEILLE SGCAM - pièce rangement'],prompt: 'Sélectionnez une localisation'%>
    </div>
<div class="sensible">
    <%= f.label :sensible? %>
    <%= f.check_box :sensible %>
  </div>
    <%= f.submit %>
</div>
<% end %>



